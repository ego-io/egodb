{
  "name": "undb",
  "version": "0.3.2",
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@types/node": "^18.16.3",
    "@undb/eslint-config": "^0.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-cli": "^7.2.1",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "taze": "^0.10.0",
    "turbo": "^1.9.3",
    "typescript": "^5.0.4",
    "zx": "^7.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,md}": "prettier --write"
  },
  "packageManager": "pnpm@8.4.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:image": "zx scripts/build-image.mjs",
    "clean": "turbo run clean --parallel",
    "commit": "cz",
    "db:migration:create": "turbo run db:migration:create",
    "db:schema:fresh": "turbo run db:schema:fresh",
    "dev": "FORCE_COLOR=1 dotenv -- turbo run dev --parallel --concurrency=12",
    "dev:packages": "FORCE_COLOR=1 turbo run dev --parallel --filter=./packages/*",
    "docker:minio": "docker compose -f ./docker/docker-compose.minio.yaml up -d",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "test": "FORCE_COLOR=1 TZ=UTC turbo run test",
    "test:watch": "FORCE_COLOR=1 TZ=UTC turbo run test:watch",
    "up": "taze major -r -w -i"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/database/*"
  ],
  "dependencies": {
    "husky": "^8.0.3"
  }
}
