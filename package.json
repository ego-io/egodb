{
  "name": "undb",
  "version": "0.2.12",
  "devDependencies": {
    "@commitlint/cli": "^17.6.0",
    "@commitlint/config-conventional": "^17.6.0",
    "@types/node": "^18.15.11",
    "@undb/eslint-config": "^0.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-cli": "^7.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "taze": "^0.10.0",
    "turbo": "^1.8.8",
    "typescript": "^5.0.3",
    "zx": "^7.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,md}": "prettier --write"
  },
  "packageManager": "pnpm@8.3.1",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:image": "zx scripts/build-image.mjs",
    "clean": "turbo run clean --parallel",
    "commit": "cz",
    "db:migration:create": "turbo run db:migration:create",
    "db:schema:fresh": "turbo run db:schema:fresh",
    "dev": "FORCE_COLOR=1 dotenv -- turbo run dev --parallel --concurrency=12",
    "dev:packages": "FORCE_COLOR=1 turbo run dev --parallel --filter=./packages/*",
    "docker:down": "docker compose -f ./docker/docker-compose.yaml down",
    "docker:up": "docker compose -f ./docker/docker-compose.yaml up -d",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "test": "FORCE_COLOR=1 TZ=UTC turbo run test",
    "test:watch": "FORCE_COLOR=1 TZ=UTC turbo run test:watch",
    "up": "taze -r -w -i"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/database/*"
  ]
}
