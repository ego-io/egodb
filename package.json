{
  "name": "egodb",
  "version": "0.0.0",
  "devDependencies": {
    "@egodb/eslint-config": "^0.0.0",
    "@types/node": "^18.11.18",
    "commitizen": "^4.2.6",
    "cz-emoji": "^1.3.2-canary.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "syncpack": "^8.4.11",
    "taze": "^0.8.5",
    "turbo": "^1.7.0",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,md}": "prettier --write"
  },
  "packageManager": "pnpm@7.25.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean --parallel",
    "commit": "cz",
    "db:migration:up": "FORCE_COLOR=1 turbo run db:migration:up",
    "db:schema:fresh": "FORCE_COLOR=1 turbo run db:schema:fresh",
    "dev": "FORCE_COLOR=1 turbo run dev --parallel",
    "dev:packages": "FORCE_COLOR=1 turbo run dev --parallel --filter=./packages/*",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "syncpack:check": "syncpack list-mismatches",
    "syncpack:fix": "syncpack fix-mismatches",
    "test": "FORCE_COLOR=1 TZ=UTC turbo run test",
    "test:watch": "FORCE_COLOR=1 TZ=UTC turbo run test:watch",
    "up": "taze -r -w -i"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/database/*"
  ]
}
